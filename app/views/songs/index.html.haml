%h1 Songs

%table
	%tr
		%th Title
		%th Artist  
		%th Genre  
		%th Musician Learn Count  

	- @songs.each do |song|
		%tr
			%td= song.title
			%td= song.artist
			%td= song.genre
			%td= song.musicians.count
			%td= link_to 'Show', song
			%td= link_to 'Edit', edit_song_path(song)
			%td= link_to 'Destroy', song, confirm: "Are you sure?", method: :delete
%br
=link_to 'New Song', new_song_path